#!/usr/bin/env python
"""
Rename Kanafiles
"""

import sys
import os
import romkan

for IN_FILE in sys.argv[1:]:
    NEW_FILENAME = romkan.to_roma(os.path.basename(IN_FILE))
    if NEW_FILENAME != os.path.basename(IN_FILE):
        os.rename(IN_FILE, os.path.join(os.path.dirname(IN_FILE), NEW_FILENAME))
